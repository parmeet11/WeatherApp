<!DOCTYPE html>
<html lang="en">
<head>
    {{>headerlinks}}
</head>
<body>
    {{>navbar}}
    <!--main header-->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="row">
                    <!--left side-->
                    <div class="col-md-6 col-12 main_header_left">
                        <h3>Welcome</h3>
                        <h1>Get the current <span class="text_color">wheather</span> of any country </h1>
                        <a href="/wheather"><button>check</button></a>
                    </div>
                    <!--right side-->
                    <div id="carouselExampleControls" class="carousel slide main_header_right" data-ride="carousel">
                      <div class="carousel-inner"> <!--role="listbox" style="max-width:600px; max-height:650px !important;">-->
                        <div class="carousel-item active">
                          <img class="w-60" src="images/bg1.jpg" alt="First slide">
                        </div>
                        <div class="carousel-item">
                          <img class="w-60" src="images/bg2.jpg" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                          <img class="w-60" src="images/bg4.jpeg" alt="Third slide">
                        </div>
                      </div>
                      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true" style="color: black;"></span>
                        <span class="sr-only">Previous</span>
                      </a>
                      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                      </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--footer -->
    {{>footer}}
</body>
</html>